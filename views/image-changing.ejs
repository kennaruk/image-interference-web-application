<!DOCTYPE html>
<html>

<head>
  <% include head.ejs %>
</head>

<body>
  <% include header.ejs %>

        <div id="main-content" class="py-5 bg-primary text-light w-100 h-75" style="align-items: center;">
          <div class="container">
            <!-- <div class="col-md-12 p-3 bg-primary" style="height:10vh;"></div>                   -->
            <div class="row" style="height:60vh;">
              <div class="bg-primary col-md-12 p-3">
                <h1 class="text-white h-50 text-center">
                    <br> <br> <br> <br>
                  จงจำรูปภาพต่อไปนี้</h1>
                    <br> <br> <br> <br> <br>
              </div>
            </div>
          </div>
        </div>

  <% include footer.ejs %>
  <% include script.ejs %>
  <script>
    $(() => {
      var images;
      $.ajax({
        url: '/getImage',
        type: 'POST',
        data: {
          trial_no: <%= trial_no %>
        },
        success: (payload) => {
          if(payload.success)
            images = payload.data;
          else
            swal("ผิดพลาด", "พัง", "warning");
        }
      });

      var varInterval = setInterval(changeContent, 700);
      var count = 0;

      function changeContent() {
        if(count === 0) {
          changeToImage();
        } else if(count === images.length) {
          changeToAnswer();
          clearInterval(varInterval);
        } else {
          $('#img').attr('src', images[count]);
        }
        count++;
      }

      function changeToImage() {
        $.ajax({
          url: '/image',
          type: 'POST',
          data: {
            imgsrc: images[count]
          },
          success: (payload) => {
            if(payload) 
              $('#main-content').html(payload);
            else
              swal("ผิดพลาด", "พัง", "warning");
          }
        });
      }

      function changeToAnswer() {
        var answers;
        $.ajax({
          url: '/answer',
          type: 'POST',
          data: {
            trial_no: <%= trial_no %>
          },
          success: (payload) => {
            if(payload)
              $('#main-content').html(payload);
            else
              swal("ผิดพลาด", "พัง", "warning");
          }
        });
      }

    });
  </script>
</body>

</html>